<div class="container-sm mt-4 mb-4">
  <div class="card shadow-lg mb-5 bg-white rounded">
    <div class="card-header text-center">
      <%= link_to gravatar_for(@article.user, size: 80), user_path(@article.user) %>
      <%= @article.user.username %>
    </div>
    <div class="card-body">
      <h5 class="card-title text-success"><%= @article.title %></h5>
      <p class="card-text text-left"><%= simple_format(@article.description) %></p>
      <div class="row justify-content-center">
        <div class="col col col-lg-1">
          <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-outline-primary" %>
        </div>
        <div class="col col col-lg-1">
          <%= button_to 'Destroy', @article, method: :delete, class: "btn btn-outline-danger", data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    </div>
    <div class="card-footer text-muted text-center">
      <small>Created <%= time_ago_in_words(@article.created_at) %> ago, 
      Edited <%=  time_ago_in_words(@article.updated_at) %> ago</small>
    </div>
  </div>
</div>
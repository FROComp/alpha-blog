<div class="card text-center shadow-lg mb-5 bg-white rounded">
  <div class="card-header font-italic text-primary">
    <% if article.user %>
      by <%= link_to article.user.username, article.user %>
    <% end %>
  </div>
  <div class="card-body">
    <h5 class="card-title text-success"><%= article.title %></h5>
    <p class="card-text"><%= truncate(article.description, length: 100) %></p>
    <div class="row justify-content-center">
      <div class="mx-2">
        <%= link_to 'View', article, class: "btn btn-outline-success" %>
      </div>
      <% if can_modify_article?(article) %>
        <div class="mx-2">
          <%= link_to 'Edit', edit_article_path(article), class: "btn btn-outline-primary" %>
        </div>
        <div class="mx-2">
          <%= button_to 'Destroy', article, method: :delete, class: "btn btn-outline-danger", data: { confirm: 'Are you sure?' } %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="card-footer text-muted">
    <small>Created <%= time_ago_in_words(article.created_at) %> ago, 
    Edited <%=  time_ago_in_words(article.updated_at) %> ago</small>
  </div>
</div>